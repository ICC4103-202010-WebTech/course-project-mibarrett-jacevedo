<%= form_with model: [@event, @event_option], local: true do |form| %>
  <%= errors_for @event_option %>
  <div class="form-group">
    <%= form.label :day %>
    <%= form.datetime_local_field :day %>
  </div>
  <div class="form-group">
    <%= form.submit class: ["btn", "btn-primary"] %>
    <%= link_to "Back", :back, class: ["btn", "btn-secondary"] %>
  </div>
<% end %>