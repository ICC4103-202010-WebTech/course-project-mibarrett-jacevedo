
<div class="row ml-0">
  <%= form_with model: profile, local: true do |form| %>
    <div class="form-group">
      <%= form.label :name %>
      <%= form.text_field :name, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= form.label :biography %>
      <%= form.text_area :biography, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= form.label :picture %>
      <%= form.file_field :picture %>
    </div>

    <% if action_name == 'edit' %>
      <%=form.fields_for :organization_users do |organization_user_form| %>
        <div id="organization-user-nested-forms" class="form-group">
          <div class="form-group">
            <%= organization_user_form.label :organization_id %>
            <%= organization_user_form.collection_select :organization_id, Organization.all.order(:name), :id, :name %>
          </div>
        </div>
      <% end %>
      <%=form.fields_for :user do |user_form| %>
        <div id="organization-user-nested-forms" class="form-group">
          <div class="form-group">
            <%= user_form.label :username %>
            <%= user_form.text_area :username,  class: "form-control"%>
          </div>
        </div>
      <% end %>
      <%= link_to "Change your password", edit_user_registration_path %>
    <% end %>


    <div class="form-group mt-2">
      <%= form.submit submit_btn_text, class: ["btn", "btn-primary"] %>
      <%= link_to "Back", :back, class: ["btn", "btn-secondary"] %>
    </div>

  <% end %>
</div>