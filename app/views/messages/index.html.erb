<p id="notice"><%= notice %></p>

<h2><%=@user.profile.name%> Mailbox</h2>
<table>
  <thead>
  <tr>
    <th><h3>Messages</h3></th>
    <th colspan="3"></th>
  </tr>
  </thead>
  <tbody>
  <% @messages.each do |message| %>
    <tr>
      <td><h5>From: <%=message.mailbox.user.username%></h5></td>
      <td><%=message.content%></td>
      <td><%= link_to 'Show', message_path(message) %></td>
      <td><%= link_to 'Delete', message, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
  </tbody>
</table>

<br>

<h4><%= link_to 'Compose new message', new_mailbox_message_path(@mailbox) %></h4>

<%= link_to 'Back to home', root_path %>
