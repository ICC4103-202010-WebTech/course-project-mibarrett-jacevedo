<div class="row ml-0 mt-3">
  <h2>Vote for an event date</h2>
</div>
<div class="row ml-0">
  <%= form_with model: @event_guest do |form| %>
    <%= form.hidden_field :user_id, value: @user.id %>
    <div class="form-group">
      <%= form.label :event_option_id %>
      <%= form.collection_select :event_option_id, EventOption.all.order(:day), :id, :day %>
    </div>
    <div class="form-group mt-2">
      <%= form.submit 'Vote', class: ["btn", "btn-primary"] %>
      <%= link_to 'Back', :back, class: ["btn", "btn-secondary"] %>
    </div>
  <%end%>
</div>
