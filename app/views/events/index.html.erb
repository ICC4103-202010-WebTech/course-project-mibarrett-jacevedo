<p id="notice"><%= notice %></p>

<h1 class="event">Events</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td class="name"><%= event.title %></td>
        <td><a><%= link_to 'Show', event %></a></td>
        <td><a><%= link_to 'Edit', edit_event_path(event) %></a></td>
        <td><a><%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' } %></a></td>
        <td><a><%= link_to 'Comments', comment_path(event) %></a></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

