<div class="row ml-0">
  <%= form_with model: event, local: true do |form| %>
    <%= form.hidden_field :user_id, value: current_user.id %>
    <div class="form-group">
      <%= form.label :title %>
      <%= form.text_field :title, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= form.label :description %>
      <%= form.text_area :description, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= form.label :location %>
      <%= form.text_field :location, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= form.label :picture %>
      <%= form.file_field :picture %>
    </div>
    <div class="form-group">
      <%= form.label :images %>
      <%= form.file_field :images %>
    </div>
    <div class="form-group">
      <%= form.label :pdf %>
      <%= form.file_field :pdf %>
    </div>
    <div class="form-group">
      <%= form.label :videos %>
      <%= form.file_field :videos %>
    </div>
    <div class="card">
      <div class="card-body">
        <h5 class="card-title">Event Option</h5>
        <p>Select possible dates for your event </p>
          <%=form.fields_for :event_options do |event_options_form| %>
            <div id="event-option-nested-forms" class="form-group">
              <%= event_options_form.label :day %>
              <%= event_options_form.datetime_local_field :day %>

              <% if action_name == 'edit' %>
                <%= event_options_form.label "Delete"%>
                <%= event_options_form.check_box :_destroy %>
              <% end %>
              <hr>
            </div>
        <% end %>
        <% if action_name == 'new' %>
          <%= link_to "Add Event Day", new_event_event_option_otf_path, class: [ 'btn', 'btn-primary'], remote: true %>
        <% end %>
      </div>
    </div>
    <h5 class="card-title">Private or public</h5>
    <%= form.fields_for :event_organization do |event_organization_form| %>
      <%= event_organization_form.hidden_field :organization_id, value: current_user.organization.id %>
      <%= event_organization_form.select(:priv_or_pub, raw('<option value="1">Private</option><option value="2">Public</option>')) %>
    <%end%>
    <div class="form-group mt-2">
      <%= form.submit submit_btn_text, class: ["btn", "btn-primary"] %>
      <%= link_to "Back", :back, class: ["btn", "btn-secondary"] %>
    </div>
  <% end %>
</div>