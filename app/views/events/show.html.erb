<p id="notice"><%= notice %></p>
<table>
  <thead>
  <tr>
    <th>Event name</th>
    <th>Host</th>
    <th>Description</th>
    <th>Event location</th>
    <th>Organization</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
    <tr>
      <td><%= @event.title %></td>
      <td><%= @event.user.username %></td>
      <td><%= @event.description %></td>
      <td><%= @event.location %></td>
      <td><%= link_to @organization.name, organization_path(@event) %></td>
    </tr>
  </tbody>
</table>

<h4>Comments</h4>

<%= @event_comments.each do |comment| %>
  <div class="row">
    <div class="column">
      <h1><%= comment.user.username %></h1>
      <p><%= comment.message %></p>
      <p><%= link_to 'Replies', comment_path(comment) %></p>
    </div>
  </div>
<%end%>



<%= link_to 'Edit', edit_event_path(@event) %> |
<%= link_to 'Back', events_path %>
