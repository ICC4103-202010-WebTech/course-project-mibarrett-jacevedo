<p id="notice"><%= notice %></p>
<table>
  <thead>
  <tr>
    <th>Event name</th>
    <th>Host</th>
    <th>Description</th>
    <th>Event location</th>
    <th>Organization</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
    <tr>
      <td><%= @event.title %></td>
      <td><%= @event.user.username %></td>
      <td><%= @event.description %></td>
      <td><%= @event.location %></td>
      <td><%= link_to @organization.name, organization_path(@event) %></td>
    </tr>
  </tbody>
</table>

<h4>Comments</h4>
<table>
  <thead>
  <tr>
    <th colspan="3"></th>
  </tr>
  </thead>
  <tbody>
  <tr>
    <%= @event_comments.each do |comment| %>
      <td><%= comment.user.username %></td>
      <td><%= comment.message %> </td>
      <td><%=link_to 'Replies', comment_path(comment) %> </td>
    <%end%>
  </tr>
  </tbody>
</table>


<%= link_to 'Edit', edit_event_path(@event) %> |
<%= link_to 'Back', events_path %>
