<p id="notice"><%= notice %></p>
<table>
  <thead>
  <tr>
    <th>Event name</th>
    <th>Host</th>
    <th>Description</th>
    <th>Event location</th>
    <th>Organization</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
    <tr>
      <td><%= @event.title %></td>
      <td><%= @event.user.username %></td>
      <td><%= @event.description %></td>
      <td><%= @event.location %></td>
      <td><%= link_to @organization.name, organization_path(@event) %></td>
    </tr>
  </tbody>
</table>

<h3>Date options for this event</h3>
<%@date_options.each do |date|%>
  <%@vote_number= date.event_votes.count %>
  <p><%=date.day%>  <%=@vote_number%> Votes</p>
<%end%>
<p><%=link_to 'Vote for this event'%>></p>

<h3>People invited to this event</h3>
<%@guests.each do |guest|%>
  <p><%=guest.user.username%> <%=link_to 'See profile' %></p>
<%end%>

<h3>Comments</h3>

<% @event_comments.each do |comment| %>
  <%@replies= comment.replies %>
  <div class="row">
    <div class="column">
      <h5><%= comment.user.username %></h5>
      <p><%= comment.message %>  Reply </p>
        <% @replies.each do |reply| %>
        <div class="row">
          <div class="column">
          <p class="reply"><%=reply.user.username%>: <%= reply.message%></p>
          </div>
        </div>
      <%end %>
    </div>
  </div>
<%end%>
<p>Create new comment</p>

<%= link_to 'Edit', edit_event_path(@event) %> |
<%= link_to 'Back', events_path %>
