<p id="notice"><%= notice %></p>

<h1><%=@user.profile.name%> Mailbox</h1>
<table>
  <thead>
  <tr>
    <th><h2>Messages</h2></th>
    <th colspan="3"></th>
  </tr>
  </thead>
  <tbody>
  <% @messages.each do |message| %>
    <tr>
      <td><h3>From: <%=message.user.username%></h3></td>
      <td><%=message.content%></td>
      <td><%= link_to 'Show', message_path(message) %></td>
      <td>Destroy</td>
    </tr>
  <% end %>
  </tbody>
</table>

<br>

<h4><%= link_to 'Compose new message', new_mailbox_path %> </h4>

<%= link_to 'Back to home', root_path %>
